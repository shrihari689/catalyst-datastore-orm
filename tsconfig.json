{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "declaration": true,
    "target": "es2015",
    "baseUrl": ".",
    "paths": {
      "@Types/*": ["lib/Types/*"],
      "@Schema/*": ["lib/Schema/*"],
      "@Keyword/*": ["lib/Keyword/*"],
      "@Query/*": ["lib/Query/*"],
      "@Validator/*": ["lib/Validator/*"],
      "@Service/*": ["lib/Service/*"],
      "@Service": ["lib/Service"],
      "@Keyword": ["lib/Keyword"],
      "@Schema": ["lib/Schema"],
      "@Types": ["lib/Types"],
      "@Query": ["lib/Query"],
      "@Validator": ["lib/Validator"]
    },
    "lib": ["es6", "es5", "es2015.promise", "es2015.iterable"],
    "strict": true,
    "checkJs": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitAny": true
  },
  "include": ["lib", "tests/*.ts"],
  "exclude": ["node_modules", "dist"]
}
